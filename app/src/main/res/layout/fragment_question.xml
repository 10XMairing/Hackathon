<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Function.questions.QuestionFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/text_input_layout"
        android:layout_margin="15dp"
        android:padding="8dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:hint=" Post your question here"
        android:gravity="start"
        android:background="@drawable/cardbg_stroke"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_images"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/text_input_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Images"
        android:textAllCaps="false"
        android:textColor="@color/title_bar_color"
        android:textSize="16sp"
        app:cornerRadius="10dp" />


    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="10dp"
        android:textColor="@color/title_bar_color"
        android:textSize="16sp"
        android:text="Post"
        android:fontFamily="@font/roboto"
        android:backgroundTint="@color/colorPrimary"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/btn_post"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_input_layout"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_post"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/image"

        />
</RelativeLayout>